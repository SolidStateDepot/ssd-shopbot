net wen3410-time <= pyvcp.wen3410-time => air-filter-controller.wen3410-time

net wen3417-on   <= pyvcp.wen3417-on   => air-filter-controller.wen3417-on
net wen3417-off  <= pyvcp.wen3417-off  => air-filter-controller.wen3417-off
net wen3417-time <= pyvcp.wen3417-time => air-filter-controller.wen3417-time

